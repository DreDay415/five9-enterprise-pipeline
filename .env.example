# Environment
NODE_ENV=development

# SFTP Configuration
SFTP_HOST=your-five9-sftp-host.com
SFTP_PORT=22
SFTP_USERNAME=your-username
SFTP_PASSWORD=your-password
SFTP_REMOTE_PATH=/five9sftp/recordings/SB CS
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=whisper-1
OPENAI_POSTPROCESS_MODEL=gpt-4.1-mini

# Notion Configuration
NOTION_API_KEY=secret_your-notion-integration-key
NOTION_DATABASE_ID=your-notion-database-id

# Directory Configuration
DOWNLOAD_DIR=./data/downloads
PROCESSED_DIR=./data/processed
FAILED_DIR=./data/failed

# Processing Configuration
BATCH_SIZE=5
MAX_FILE_SIZE=25000000
ALLOWED_EXTENSIONS=.wav,.mp3,.m4a,.flac
CONCURRENCY_LIMIT=3

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Cleanup Configuration
CLEANUP_ENABLED=true
CLEANUP_DAYS_OLD=30

# Monitoring (Optional)
METRICS_PORT=9090
HEALTH_CHECK_PORT=8080

# Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# Run Logging Configuration
RUN_LOGGING_ENABLED=false
RUN_LOGGING_LOG_DIR=/srv/five9/logs
RUN_LOGGING_SERVICE_NAME=five9-transcribe
RUN_LOGGING_MAX_EVENTS=50
RUN_LOGGING_NOTION_RUNS_DB_ID=2f511d0a101c80f7b3f6eed97d9ad86d
